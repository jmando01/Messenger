<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.messenger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".Connect"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".AddContactActivity"
            android:label="@string/title_activity_add_contact"
            android:uiOptions="splitActionBarWhenNarrow"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".ChatEntryActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_chat_entry" >
        </activity>
        <activity
            android:name=".ChatListActivity"
            android:label="@string/title_activity_chat_list"
            android:launchMode="singleTask"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status"
            android:uiOptions="splitActionBarWhenNarrow"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/title_activity_options"
            android:uiOptions="splitActionBarWhenNarrow"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".RegisterPhase1Activity"
            android:label="@string/title_activity_register_phase1" >
        </activity>
        <activity
            android:name=".EmailReportActivity"
            android:label="@string/title_activity_email_report" >
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password" >
        </activity>
        <activity
            android:name=".RePasswordActivity"
            android:label="@string/title_activity_re_password" >
        </activity>
        <activity
            android:name=".ESupportActivity"
            android:label="@string/title_activity_esupport" >
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_contact"
            android:uiOptions="splitActionBarWhenNarrow"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".ForgotUsernameActivity"
            android:label="@string/title_activity_forgot_username" >
        </activity>
        <activity
            android:name=".TestConnectionActivity"
            android:label="@string/title_activity_test_connection" >
        </activity>
    </application>

</manifest>